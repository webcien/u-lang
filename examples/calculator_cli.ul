fn add(a: i32, b: i32) -> i32 {
    return a + b;
}

fn subtract(a: i32, b: i32) -> i32 {
    return a - b;
}

fn multiply(a: i32, b: i32) -> i32 {
    return a * b;
}

fn divide(a: i32, b: i32) -> i32 {
    if b == 0 {
        print("Error: Division by zero");
        return 0;
    }
    return a / b;
}

fn power(base: i32, exp: i32) -> i32 {
    var result = 1;
    var i = 0;
    while i < exp {
        result = result * base;
        i = i + 1;
    }
    return result;
}

fn factorial(n: i32) -> i32 {
    if n <= 1 {
        return 1;
    }
    var result = 1;
    var i = 2;
    while i <= n {
        result = result * i;
        i = i + 1;
    }
    return result;
}

