    print("Subtraction: 20 - 8 = ");
    print(subtract(20, 8));
    
    print("Multiplication: 6 * 9 = ");
    print(multiply(6, 9));
    
    print("Division: 100 / 5 = ");
    print(divide(100, 5));
    
    print("");
    print("Advanced Operations:");
    print("-------------------");
    
    print("Power: 2^10 = ");
    print(power(2, 10));
    
    print("Factorial: 5! = ");
    print(factorial(5));
    
    print("Factorial: 10! = ");
    print(factorial(10));
    
    print("");
    print("Edge Cases:");
    print("-----------");
    
    print("Division by zero: 10 / 0 = ");
    print(divide(10, 0));
    
    print("Power of 0: 5^0 = ");
    print(power(5, 0));
    
    print("");
    print("=== Calculator Complete ===");
}
